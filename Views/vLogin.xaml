<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ParkIsrael_Octavo.Views.vLogin"
             Title="vLogin">
    <ScrollView>
    <VerticalStackLayout
        Spacing="15"
        Padding="15">
            <Image Source="parkuisrael.png"
                   
                   MaximumHeightRequest="150"
                   VerticalOptions="Center"
                   HorizontalOptions="Center"
                   />
            <Entry x:Name="txtUsuario"
                   Placeholder="Usuario"
                   FontAttributes="Bold"
                   PlaceholderColor="Black"
                   BackgroundColor="White"
                   HeightRequest="40"
                   TextColor="Black"/>
            <Entry x:Name="txtContrasena"
                   Placeholder="ContraseÃ±a"
                   PlaceholderColor="Black"
                   FontAttributes="Bold"
                   BackgroundColor="White"
                   HeightRequest="40"
                   TextColor="Black"
                   IsPassword="True"/>

            <Button x:Name="btnIngresar"
                    Text="Ingresar"
                    TextColor="White"
                    BorderColor="Orange"
                    HeightRequest="45"
                    CornerRadius="10"
                    FontAttributes="Bold"
                    BackgroundColor="DarkOrange"
                    Clicked="btnIngresar_Clicked"/>

            <Button x:Name="btnRegistro"
                    Text="Registrar"
                    TextColor="White"
                    BackgroundColor="DarkOrange"
                    FontAttributes="Bold"
                    CornerRadius="10"
                    HeightRequest="45"
                    BorderColor="Orange"
                    Clicked="btnRegistro_Clicked"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>