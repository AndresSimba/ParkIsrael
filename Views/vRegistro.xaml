<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ParkIsrael_Octavo.Views.vRegistro"
             Title="vRegistro">
    
    <ScrollView>
        <VerticalStackLayout
            Spacing="15"
            Padding="15">
        
            <Image
                Source="logo.png"
                MaximumHeightRequest="250"
                VerticalOptions="Center"
                HorizontalOptions="Center">            
            </Image>
        
            <Label
                Text="REGISTRO NUEVO USUARIO"
                VerticalOptions="Center"
                HorizontalOptions="Center"
                FontAttributes="Bold"
                FontSize="20">            
            </Label>

                <Label Text="APELLIDOS:" FontAttributes="Bold"/>
        
            <Entry
                x:Name="txtApellidos"
                Placeholder=""
                HeightRequest="40"
                BackgroundColor="White"
                TextColor="Black">            
            </Entry>
        
            <Label Text="NOMBRES:" FontAttributes="Bold"/>
        
            <Entry
                x:Name="txtNombres"
                HeightRequest="40"
                BackgroundColor="White"
                TextColor="Black">            
            </Entry>
        
            <Label Text="CEDULA:" FontAttributes="Bold"/>
        
            <Entry
                x:Name="txtCedula"
                Keyboard="Numeric"
                MaxLength="10"
                HeightRequest="40"
                BackgroundColor="White"
                TextColor="Black">            
            </Entry>
        
            <Label Text="PLACA VEHICULAR:" FontAttributes="Bold"/>
        
            <Entry
                x:Name="txtPlaca"
                HeightRequest="40"
                BackgroundColor="White"
                TextColor="Black">            
            </Entry>
        
            <Label Text="USUARIO:" FontAttributes="Bold"/>
        
            <Entry
                x:Name="txtUsuario"
                HeightRequest="40"
                BackgroundColor="White"
                TextColor="Black">            
            </Entry>
        
            <Label Text="CONTRASEÑA:" FontAttributes="Bold"/>
        
            <Entry
                x:Name="txtContraseña"
                IsPassword="True"
                HeightRequest="40"
                BackgroundColor="White"
                TextColor="Black">            
            </Entry>

            <Button
                x:Name="btnGuardar"
                Text="GUARDAR"
                Clicked="btnGuardar_Clicked"
                BackgroundColor="DarkOrange"
                FontAttributes="Bold"
                HeightRequest="45"
                TextColor="White"
                CornerRadius="10">
            </Button>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>